{% extends '::base.html.twig' %}

{% block mainarea %}

<table class="table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Value</th>
        </tr>
    </thead>
    
    <tbody>
	{% for transaction in transactions %}
	<tr>
	    <td>{{ transaction.date }}</td>
	    <td>{{ transaction.description }}</td>
	    <td>{{ transaction.value }}</td>
	</tr>
	{% endfor %}
	</tbody>
</table>

{% endblock %}
